---
import { Image } from "astro:assets";
import { Linkedin } from "react-feather";
const {
  members: { title, description, member_list },
} = Astro.props;
---

<section class="section">
  <div class="container">
    <div class="row">
      <div class="mx-auto text-center lg:col-6">
        <h2>{title}</h2>
        <p class="mt-4">
          {description}
        </p>
      </div>
    </div>
    <div class="row mt-12 justify-center">
      <div class="lg:col-10">
        <div class="row">
          {
            member_list.map((item: any) => (
              <div class="mb-6 flex flex-col px-6 text-center sm:col-6 lg:col-4 sm:items-center">
                <div class="relative member-avatar inline-flex justify-center">
                  <Image
                    height={200}
                    width={200}
                    class="rounded-full h-32 w-32 object-cover"
                    src={item.image}
                    alt=""
                  />
                  <div class="absolute bottom-0 right-0 bg-white rounded-full p-2 shadow-md">
                    <a
                      href={item.linkedin}
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <Linkedin size={22} />
                    </a>
                  </div>
                </div>
                <div class="mt-6 w-full flex-1 rounded-xl bg-white px-4 py-8 shadow-lg">
                  <h5 class="font-primary">{item.name}</h5>
                  <p class="mt-1.5">{item.field}</p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
